{
  "ts-node": {
    "experimentalResolver": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "allowJs": true,
    "target": "ES2017",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "strict": true,
    "moduleResolution": "node",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": [
      "webworker"
    ]
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "dist",
    "demo"
  ]
}
